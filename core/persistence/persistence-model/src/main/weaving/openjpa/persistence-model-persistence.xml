            <property name="openjpa.Log" value="DefaultLevel=WARN, Tool=INFO, SQL=TRACE"/>
            <property name="openjpa.RuntimeUnenhancedClasses" value="supported"/>
        </properties -->

    </persistence-unit>
</persistence>