<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- +=============================================== -->
    <!-- | Section 1:  Project information                -->
    <!-- +=============================================== -->
    <parent>
        <groupId>se.jguru.nazgul.core.poms.core-parent</groupId>
        <artifactId>nazgul-core-parent</artifactId>
        <version>1.7.2-SNAPSHOT</version>
        <relativePath>../../../poms/core-parent</relativePath>
    </parent>

    <groupId>se.jguru.nazgul.core.osgi.launcher.impl.felix</groupId>
    <artifactId>nazgul-core-osgi-launcher-impl-felix</artifactId>
    <packaging>jar</packaging>
    <name>${project.artifactId}</name>
    <url>${url.prefix}/${path.in.reactor}</url>

    <properties>
        <path.in.reactor>core/osgi/launcher/launcher-impl-felix</path.in.reactor>
    </properties>

    <!-- +=============================================== -->
    <!-- | Section 2:  Dependency (management) settings   -->
    <!-- +=============================================== -->
    <dependencies>
        <!-- Internal dependencies -->
        <dependency>
            <groupId>se.jguru.nazgul.core.osgi.launcher.api</groupId>
            <artifactId>nazgul-core-osgi-launcher-api</artifactId>
            <version>1.7.2-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>se.jguru.nazgul.test.osgi</groupId>
            <artifactId>nazgul-core-osgi-test</artifactId>
            <version>1.7.2-SNAPSHOT</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>se.jguru.nazgul.test.bundles.hello.impl.plain</groupId>
            <artifactId>nazgul-test-hello-impl-plain</artifactId>
            <version>${test.bundles.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>se.jguru.nazgul.test.bundles.hello.impl.blueprint</groupId>
            <artifactId>nazgul-test-hello-impl-blueprint</artifactId>
            <version>${test.bundles.version}</version>
            <scope>test</scope>
        </dependency>

        <!-- External dependencies -->
        <dependency>
            <groupId>org.apache.felix</groupId>
            <artifactId>org.apache.felix.framework</artifactId>
            <version>${felix.version}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.felix</groupId>
            <artifactId>org.apache.felix.main</artifactId>
            <version>${felix.version}</version>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.aries.blueprint</groupId>
            <artifactId>org.apache.aries.blueprint</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.aries.blueprint</groupId>
            <artifactId>org.apache.aries.blueprint.core</artifactId>
            <version>${aries.blueprintcore.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.easymock</groupId>
            <artifactId>easymock</artifactId>
            <version>3.1</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <!-- +=============================================== -->
    <!-- | Section 3:  Build settings                     -->
    <!-- +=============================================== -->
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Export-Package>{local-packages}</Export-Package>
                    </instructions>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>cobertura-maven-plugin</artifactId>
                <version>${cobertura.plugin.version}</version>
                <configuration>
                    <instrumentation>
                        <includes>
                            <include>se/jguru/nazgul/**/*.class</include>
                        </includes>
                        <excludes>

                            <!-- Don't check Exception classes -->
                            <exclude>se/jguru/nazgul/**/*Exception.class</exclude>

                        </excludes>
                    </instrumentation>
                    <check>
                        <branchRate>65</branchRate>
                        <lineRate>80</lineRate>
                        <haltOnFailure>true</haltOnFailure>
                        <regexes>
                            <regex>
                                <pattern>se.jguru.nazgul.core.osgi.launcher.api.AbstractFrameworkLauncher</pattern>
                                <branchRate>65</branchRate>
                                <lineRate>70</lineRate>
                            </regex>
                        </regexes>
                    </check>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.apache.felix</groupId>
                                    <artifactId>org.apache.felix.main.distribution</artifactId>
                                    <version>${felix.version}</version>
                                    <type>zip</type>
                                    <outputDirectory>${basedir}/target/felix</outputDirectory>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-testsupport</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.apache.openjpa</groupId>
                                    <artifactId>openjpa</artifactId>
                                    <version>${openjpa.version}</version>
                                    <outputDirectory>${project.build.directory}</outputDirectory>
                                    <destFileName>openjpa.jar</destFileName>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>se.jguru.nazgul.test.bundles.hello.api</groupId>
                                    <artifactId>nazgul-test-hello-api</artifactId>
                                    <version>${test.bundles.version}</version>
                                    <outputDirectory>target/downloadedBundles</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>se.jguru.nazgul.test.bundles.hello.api</groupId>
                                    <artifactId>nazgul-test-hello-api</artifactId>
                                    <version>${test.bundles.version}</version>
                                    <outputDirectory>target/downloadedBundles</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>se.jguru.nazgul.test.bundles.hello.impl.blueprint</groupId>
                                    <artifactId>nazgul-test-hello-impl-blueprint</artifactId>
                                    <version>${test.bundles.version}</version>
                                    <outputDirectory>target/downloadedBundles</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>se.jguru.nazgul.test.bundles.hello.impl.plain</groupId>
                                    <artifactId>nazgul-test-hello-impl-plain</artifactId>
                                    <version>${test.bundles.version}</version>
                                    <outputDirectory>target/downloadedBundles</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.osgi</groupId>
                                    <artifactId>org.osgi.compendium</artifactId>
                                    <outputDirectory>target/downloadedBundles</outputDirectory>
                                    <version>${osgi.version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.apache.felix</groupId>
                                    <artifactId>org.apache.felix.fileinstall</artifactId>
                                    <version>${felix.fileinstall.version}</version>
                                    <outputDirectory>target/downloadedBundles</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.apache.felix</groupId>
                                    <artifactId>org.apache.felix.gogo.runtime</artifactId>
                                    <outputDirectory>target/downloadedBundles</outputDirectory>
                                    <version>${felix.gogoruntime.version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.apache.felix</groupId>
                                    <outputDirectory>target/downloadedBundles</outputDirectory>
                                    <artifactId>org.apache.felix.configadmin</artifactId>
                                    <version>${felix.configadmin.version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.apache.felix</groupId>
                                    <artifactId>org.apache.felix.dependencymanager</artifactId>
                                    <outputDirectory>target/downloadedBundles</outputDirectory>
                                    <version>${felix.dependencymanager.version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.apache.felix</groupId>
                                    <artifactId>org.apache.felix.deploymentadmin</artifactId>
                                    <outputDirectory>target/downloadedBundles</outputDirectory>
                                    <version>${felix.deploymentadmin.version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.apache.aries.blueprint</groupId>
                                    <artifactId>org.apache.aries.blueprint.core</artifactId>
                                    <outputDirectory>target/downloadedBundles</outputDirectory>
                                    <version>${aries.blueprintcore.version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.apache.aries.blueprint</groupId>
                                    <artifactId>org.apache.aries.blueprint.api</artifactId>
                                    <outputDirectory>target/downloadedBundles</outputDirectory>
                                    <version>1.0.0</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.apache.aries</groupId>
                                    <artifactId>org.apache.aries.util</artifactId>
                                    <outputDirectory>target/downloadedBundles</outputDirectory>
                                    <version>${aries.blueprint.version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.apache.aries.proxy</groupId>
                                    <artifactId>org.apache.aries.proxy</artifactId>
                                    <outputDirectory>target/downloadedBundles</outputDirectory>
                                    <version>1.0.1</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.apache.aries.quiesce</groupId>
                                    <artifactId>org.apache.aries.quiesce.api</artifactId>
                                    <outputDirectory>target/downloadedBundles</outputDirectory>
                                    <version>1.0.0</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.slf4j</groupId>
                                    <artifactId>slf4j-api</artifactId>
                                    <outputDirectory>target/downloadedBundles</outputDirectory>
                                    <version>1.6.6</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>ch.qos.logback</groupId>
                                    <artifactId>logback-core</artifactId>
                                    <outputDirectory>target/downloadedBundles</outputDirectory>
                                    <version>1.0.7</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>ch.qos.logback</groupId>
                                    <artifactId>logback-classic</artifactId>
                                    <outputDirectory>target/downloadedBundles</outputDirectory>
                                    <version>1.0.7</version>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <!-- +=============================================== -->
    <!-- | Section 4:  External systems                   -->
    <!-- +=============================================== -->

    <!--
        Define repository settings for Maven's deploy and release plugins.
        Moved to settings.xml, as per recommendation within Maven specs.
    -->
    <distributionManagement>
        <site>
            <id>jGuru_NazgulCoreSite</id>
            <name>jGuru_NazgulCoreSite</name>
            <url>${distro.url.prefix}/${path.in.reactor}</url>
        </site>
    </distributionManagement>

    <!--
       Define connections for Maven's VCS integration.
    -->
    <scm>
        <connection>${scm.url.prefix}/${reactor.name}</connection>
        <developerConnection>${scm.url.prefix}/${reactor.name}</developerConnection>
        <url>${reactor.url.remote.prefix}/${reactor.name}</url>
        <tag>HEAD</tag>
    </scm>
</project>
